<div class="jumbotron">
    <hr class="my-24">
</div>

{{#each flats}}
    <div class="card mb-3">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{this.price}}</h5>
            <p class="card-text">Адрес: {{this.address}}
                Этаж: {{this.floor}}
            </p>
            <p class="card-text"><small class="text-muted"><a href="/showoneflat/{{this.id}}">Подробнее</a></small></p>
        </div>
    </div>

{{/each}}

